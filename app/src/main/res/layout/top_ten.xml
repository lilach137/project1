<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.TopTen_Activity">

    <ImageView
        android:id="@+id/topTen_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="#4A99C3"  />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/topTen_frames"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/topTen_listTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="TOP TEN"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/topTen_frame1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:layout_weight="1.2"
            android:background="#4A99C3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <FrameLayout
            android:id="@+id/topTen_frame2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="#0D5A71" />

        <LinearLayout
            android:id="@+id/topTen_linerTopTen"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/topTen_BTN_homePage"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:layout_marginTop="12dp"
                android:text="home page"
                android:textColor="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/topTen_BTN_replay"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_BTN_newGameButtons"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="replay"
                android:textColor="@color/white" />

        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>



</RelativeLayout>